@page "/users"
@using SharedLib.Models
@using BlazorApp.Services
@inject IUserService UserService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Quản lý người dùng</PageTitle>

<h3>Danh sách người dùng</h3>

<div class="mb-3">  
    <button class="btn btn-primary" @onclick="NavigateToCreate">
        <i class="bi bi-plus-circle"></i> Thêm người dùng
    </button>
</div>

@if (loading)
{
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Đang tải...</span>
    </div>
}
else if (users == null || !users.Any())
{
    <div class="alert alert-info">Chưa có người dùng nào.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Mã</th>
                    <th>Họ tên</th>
                    <th>Ngày sinh</th>
                    <th>Email</th>
                    <th>Điện thoại</th>
                    <th>Địa chỉ</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in users)
                {
                    <tr>
                        <td>@user.Code</td>
                        <td>@user.FullName</td>
                        <td>@user.DateOfBirth.ToString("dd/MM/yyyy")</td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>
                        <td>@user.Address</td>
                        <td>
                            <button class="btn btn-sm btn-warning me-1" @onclick="() => NavigateToEdit(user.Id)">
                                <i class="bi bi-pencil"></i> Sửa
                            </button>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteUser(user.Id)">
                                <i class="bi bi-trash"></i> Xóa
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger mt-3">@errorMessage</div>
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success mt-3">@successMessage</div>
}

@code {
    private List<SharedLib.Models.User>? users;
    private bool loading = true;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        loading = true;
        errorMessage = null;
        try
        {
            users = await UserService.GetAllUsersAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Lỗi tải dữ liệu: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/users/create");
    }

    private void NavigateToEdit(int id)
    {
        Navigation.NavigateTo($"/users/edit/{id}");
    }

    private async Task DeleteUser(int id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Bạn có chắc muốn xóa người dùng này?"))
            return;

        var result = await UserService.DeleteUserAsync(id);
        if (result)
        {
            successMessage = "Xóa người dùng thành công!";
            await LoadUsers();
            StateHasChanged();
            await Task.Delay(3000);
            successMessage = null;
        }
        else
        {
            errorMessage = "Xóa người dùng thất bại!";
        }
    }
}